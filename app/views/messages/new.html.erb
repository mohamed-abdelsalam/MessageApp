<!DOCTYPE html>
<% provide(:title, "New Message") %>
<html>
  <div>
    <h1>Send New Message</h1>
    <%= form_for @message do |f| %>
      <p> Receiver Name:</br> <%= f.text_field :receiver_name%> </p>
      <p> Message Text:</br> <%= f.text_area :message_text%> </p>
      <%= f.submit :Send %>
      <% end %>
      <% if @message.errors.any? %>
      <ul>
        <% for error_message in @message.errors.full_messages %>
          <li><%= error_message %></li>
        <% end %>
      </ul>
      <% end %>
  </div>
</html>
